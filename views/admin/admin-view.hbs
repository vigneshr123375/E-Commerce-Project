<section style="min-height: 150vh;" class="bg-light pt-4">
    <div class="container">
        <div class="row">

            <p>{{update}}</p>

            <a href="/admin/add-product" class="btn btn-success ml-auto mb-4 " style="width: auto; height:auto;">Add
                Product</a>
        </div>
        <table id="productsTable" class="table  table-striped ">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.No}}</th>
                    <td>{{this.Name}}</td>
                    <td>Rs.{{this.Price}}</td>
                    <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width:100px;height: 80px;"
                            class="img-fluid "></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick=" return confirm('Are you sure to delete {{this.Name}}')">Delete</a></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a></td>

                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>